<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!--Toolbar -->
        <LinearLayout
                android:id="@+id/toolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:background="#DDDDDD"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent">

            <TextView android:id="@+id/pdfName"
                      android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:textColor="@color/black"
                      android:textSize="30dp"
                      android:gravity="center"
                      android:text=""/>


            <LinearLayout android:id="@+id/buttons"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:background="#DDDDDD"
                          android:padding="8dp"
                          android:gravity="right">

                <ImageButton android:id="@+id/drawBtnImage"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/draw"
                         android:onClick="drawBtnClicked"/>

                 <ImageButton android:id="@+id/highlightBtn"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/highlight_svgrepo_com"
                         android:onClick="highlightBtnClicked"
                         android:layout_gravity="right"/>

                 <ImageButton android:id="@+id/erase"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/erase_svgrepo_com"
                         android:onClick="eraseBtnClicked"/>

                 <ImageButton android:id="@+id/navLeft"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/left_arrow_svgrepo_com"
                         android:onClick="pageBack"/>

                 <ImageButton android:id="@+id/navRight"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/right_arrow_svgrepo_com__1_"
                         android:onClick="pageForward"/>

                 <ImageButton android:id="@+id/undo"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/undo_icon_svgrepo_com__1_"
                         android:onClick="undoBtnClicked"/>

                 <ImageButton android:id="@+id/redo"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/redo_icon_svgrepo_com"
                         android:onClick="redoBtnClicked"/>

            </LinearLayout>
        </LinearLayout>

        <!--PDF Viewer -->
        <LinearLayout
                android:id="@+id/pdfLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/toolbarLayout"
                app:layout_constraintBottom_toTopOf="@+id/statusBarLayout">
        </LinearLayout>

        <!--Status Bar -->
        <LinearLayout
                android:id="@+id/statusBarLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#DDDDDD"
                android:gravity="bottom">

            <TextView
                    android:id="@+id/mode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Mode: Pan"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start"/>

            <TextView
                    android:id="@+id/numPagesTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Page 0/0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="end"/>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>